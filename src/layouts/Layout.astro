---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Diogo Soares - Senior Product Manager | Building impactful technology solutions" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />

		<!-- JSON-LD for Person -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Diogo Soares",
				"jobTitle": "Senior Product Manager",
				"url": "https://diogosoares.com",
				"telephone": "+55 31 97234-6884",
				"email": "diogosp@gmail.com",
				"sameAs": [
					"https://linkedin.com/in/diogo-soares-pm/"
				]
			}
		</script>
	</head>
	<body class="flex flex-col min-h-screen">
		<header class="fixed top-0 w-full bg-white/95 backdrop-blur-sm z-50 border-b border-border">
			<nav class="section-container h-16 flex items-center justify-between">
				<a href="/" class="text-xl font-bold tracking-tight">Diogo<span class="text-accent">.</span></a>
				<div class="flex items-center gap-8">
					<div class="hidden md:flex gap-6 text-sm font-medium text-text-muted">
						<a href="/#projects" class="hover:text-text transition-colors">Projects</a>
						<a href="/cv" class="hover:text-text transition-colors">CV</a>
					</div>
					<a href="mailto:diogosp@gmail.com" class="btn-primary text-sm py-2 px-4">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m22 2-7 20-4-9-9-4Z"/><path d="M22 2 11 13"/></svg>
						Let's Talk
					</a>
				</div>
			</nav>
		</header>

		<main class="flex-grow pt-16">
			<slot />
		</main>

		<footer class="bg-surface-dark text-text-inverted py-12">
			<div class="section-container">
				<div class="flex flex-col md:flex-row justify-between items-center gap-6">
					<div>
						<p class="text-xl font-bold">Diogo Soares</p>
						<p class="text-text-inverted/60 text-sm mt-1">Senior Product Manager</p>
					</div>
					<div class="flex flex-col md:flex-row items-center gap-4 text-sm">
						<a href="mailto:diogosp@gmail.com" class="hover:text-accent transition-colors">diogosp@gmail.com</a>
						<span class="hidden md:block text-text-inverted/30">|</span>
						<a href="tel:+5531972346884" class="hover:text-accent transition-colors">+55 31 97234-6884</a>
						<span class="hidden md:block text-text-inverted/30">|</span>
						<a href="https://linkedin.com/in/diogo-soares-pm/" target="_blank" class="hover:text-accent transition-colors">LinkedIn</a>
					</div>
				</div>
				<div class="border-t border-text-inverted/10 mt-8 pt-8 text-center text-xs text-text-inverted/40">
