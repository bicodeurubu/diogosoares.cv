---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('work');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} | Diogo Soares`}>
  <article class="max-w-3xl mx-auto py-12">
    <header class="mb-12 border-b border-secondary/10 pb-8">
      <div class="flex flex-wrap gap-2 mb-6">
        {entry.data.tags.map(tag => (
          <span class="text-xs font-mono text-secondary/60 bg-secondary/5 px-2 py-1 rounded">{tag}</span>
        ))}
      </div>
      
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-primary mb-4 leading-tight">{entry.data.title}</h1>
      
      <div class="flex items-center gap-6 font-mono text-sm text-secondary">
        <span class="px-2 py-1 border border-secondary/20 rounded-full">{entry.data.role}</span>
        <span>{entry.data.year}</span>
      </div>
    </header>

    <div class="prose prose-p:text-secondary prose-headings:font-serif prose-headings:text-primary max-w-none font-sans">
      <Content />
    </div>
    
    <footer class="mt-20 pt-8 border-t border-secondary/10">
      <a href="/projects" class="font-mono text-sm text-accent-terra hover:underline">&larr; Back to Archive</a>
    </footer>
  </article>
</Layout>
