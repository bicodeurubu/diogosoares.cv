---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import EncodedContact from '../components/EncodedContact.astro';

// Strategic projects with metrics
const projects = [
  {
    title: "Conversational AI Platform (Blip)",
    description: "Led the development of Take Blip's SaaS Chatbot Platform handling millions of daily interactions for enterprise clients in finance and healthcare.",
    role: "Senior Product Manager",
    tags: ["AI/ML", "SaaS", "Enterprise"],
    href: "/projects/conversational-ai",
    metrics: "+25% NPS for Dr. Consulta • +30% CSAT for Itaú"
  },
  {
    title: "WhatsApp Customer Service (Zenvia)",
    description: "Spearheading product management for human-to-human customer service module integrated with CRM, e-commerce, and ERP systems.",
    role: "Senior Product Manager",
    tags: ["WhatsApp", "CX", "Integration"],
    href: "/projects/zenvia-cx",
    metrics: "Multi-channel orchestration"
  },
  {
    title: "Marketing Automation (8D Hubify)",
    description: "Led automated marketing campaigns on email and WhatsApp, directing AI-powered chatbot flows and CRM integrations.",
    role: "Senior Product Manager",
    tags: ["Automation", "B2B", "CRM"],
    href: "/projects/marketing-crm",
    metrics: "End-to-end automation"
  },
  {
    title: "Digital Transformation (Hospital BP)",
    description: "Led the digital transformation of Hospital Beneficência Portuguesa, revamping website, intranet, and multimedia content.",
    role: "Marketing PM",
    tags: ["Healthcare", "Digital", "UX"],
    href: "/projects/hospital-bp",
    metrics: "+50% user engagement"
  }
];

const skills = [
  "Product Strategy", "Agile Development", "Data Analytics", "UX/Customer Journey", 
  "Roadmapping", "B2B Marketing", "Payment Systems", "KYC/SSO/MFA"
];
---

<Layout title="Diogo Soares | Senior Product Manager">
	<Hero />
	
	<!-- Projects Section -->
	<section id="projects" class="py-20 bg-surface-alt">
		<div class="section-container">
			<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-12">
				<div>
					<h2 class="text-3xl md:text-4xl font-bold text-text mb-2" data-i18n="home.strategicProjects">Strategic Projects</h2>
					<p class="text-text-muted" data-i18n="home.projectsSubtitle">Selected work from 10+ years in product management</p>
				</div>
			</div>
			
			<!-- Project Grid / Carousel-like horizontal scroll on mobile -->
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				{projects.map(project => (
					<ProjectCard {...project} />
				))}
			</div>
		</div>
	</section>

	<!-- Skills Section -->
	<section class="py-20">
		<div class="section-container">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-3xl font-bold text-text mb-6" data-i18n="home.coreExpertise">Core Expertise</h2>
				<div class="flex flex-wrap justify-center gap-3">
					{skills.map(skill => (
						<span class="bg-surface-dark text-text-inverted px-4 py-2 rounded-full text-sm font-medium">
							{skill}
						</span>
					))}
				</div>
			</div>

	<!-- CTA Section -->
	<section class="py-20 bg-surface-dark text-text-inverted">
		<div class="section-container text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-6" data-i18n="home.ctaTitle">Let's Build Something Great</h2>
			<p class="text-text-inverted/70 mb-8 max-w-xl mx-auto" data-i18n="home.ctaDescription">
				Interested in product leadership, digital transformation, or just want to chat about the intersection of technology and human behavior?
			</p>
			<div class="flex flex-wrap justify-center gap-4">
				<EncodedContact 
          type="email" 
          value="diogosp@gmail.com" 
          class="bg-white text-text px-6 py-3 rounded-lg font-medium hover:bg-accent hover:!text-white transition-all duration-200" 
          showIcon={false}
        />
        <EncodedContact 
          type="phone" 
          value="+55 31 97234-6884" 
          class="border-2 border-white/50 text-white px-6 py-3 rounded-lg font-medium hover:bg-white hover:!text-text transition-all duration-200" 
          showIcon={false}
        />
			</div>
		</div>
	</section>
</Layout>
