---
interface Props {
  type: 'email' | 'phone' | 'linkedin'; // Basic types for icon selection/prefix
  value: string; // The raw value (e.g., diogosp@gmail.com)
  label?: string; // What to show (defaults to value)
  class?: string; // Additional classes
  showIcon?: boolean;
}

const { type, value, label, class: className = "", showIcon = true } = Astro.props;

// Simple Base64 encoding for the value
const encodedValue = Buffer.from(value).toString('base64');
const displayLabel = label || value;
const encodedLabel = Buffer.from(displayLabel).toString('base64');

// Icon SVG paths
const icons = {
  email: '<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/><rect width="20" height="16" x="2" y="4" rx="2"/>',
  phone: '<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>',
  linkedin: '<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/>'
};

const iconSvg = icons[type] || '';
---

<a href="#" 
   class:list={["contact-encoded cursor-pointer hover:text-accent transition-colors flex items-center gap-2", className]}
   data-value={encodedValue} 
   data-type={type}
   data-label={encodedLabel}>
  
  {showIcon && (
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={iconSvg} />
  )}
  
  <span class="encoded-text" data-len={displayLabel.length}>
    <!-- Initial render shows just dots or nothing to confuse scrapers, JS will fill it -->
    Click to reveal
  </span>
</a>

<script>
  // Global script to handle decoding on interaction (hover or click)
  function initEncodedContacts() {
    const elements = document.querySelectorAll('.contact-encoded');
    
    elements.forEach(el => {
      const link = el as HTMLAnchorElement;
      const b64Value = link.dataset.value || '';
      const b64Label = link.dataset.label || '';
      const type = link.dataset.type;
      
      const decode = (str: string) => decodeURIComponent(escape(window.atob(str)));
      
      // Decode immediately for UX, but keep href generic until hover/focus
      // OR: purely interaction based to be safest.
      // Compromise: Decode text content immediately (so user sees it), but set HREF only on hover.
      // Actually scrapers parse HTML text too.
      
      // Let's decode properly on mount so humans can see it, but it's not in the sourced HTML.
      // This defeats 99% of bots that don't execute JS.
      try {
        const decodedLabel = decode(b64Label);
        const textSpan = link.querySelector('.encoded-text');
        if (textSpan) textSpan.textContent = decodedLabel;
        
        const decodedValue = decode(b64Value);
        let href = '';
        if (type === 'email') href = `mailto:${decodedValue}`;
        else if (type === 'phone') href = `tel:${decodedValue}`;
        else if (type === 'linkedin') href = `https://${decodedValue}`;
        
        link.href = href;
      } catch (e) {
        console.error('Failed to decode contact');
      }
    });
  }

  // Run on load and after Astro swaps (if using ViewTransitions, though not active here yet)
  initEncodedContacts();
  document.addEventListener('astro:page-load', initEncodedContacts);
</script>
