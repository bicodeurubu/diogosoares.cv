---
interface Props {
  title: string;
  description: string;
  role: string;
  tags: string[];
  href: string;
  metrics?: string;
  i18nKey?: string;
}

const { title, description, role, tags, href, metrics, i18nKey } = Astro.props;
---

<a href={href} class="group card flex flex-col h-full">
  <div class="flex-grow">
    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.slice(0, 3).map((tag) => (
        <span class="text-xs font-medium text-text-muted uppercase tracking-wider" data-i18n={`tag.${tag}`}>{tag}</span>
      ))}
    </div>
    
    <!-- Title -->
    <h3 class="text-xl md:text-2xl font-bold text-text group-hover:text-accent transition-colors mb-3">
      <span data-i18n={i18nKey ? `${i18nKey}.title` : undefined}>{title}</span>
    </h3>
    
    <!-- Description -->
    <p class="text-text-secondary text-sm leading-relaxed mb-5">
      <span data-i18n={i18nKey ? `${i18nKey}.desc` : undefined}>{description}</span>
    </p>
    
    <!-- Metrics if available -->
    {metrics && (
      <div class="flex items-center gap-2 text-accent font-medium text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m22 12-4-4v3H3v2h15v3z"/></svg>
        <span data-i18n={i18nKey ? `${i18nKey}.metrics` : undefined}>{metrics}</span>
      </div>
    )}
  </div>
  
  <!-- Footer -->
  <div class="flex items-center justify-between pt-5 mt-6 border-t border-border">
    <span class="text-xs font-medium text-text-muted uppercase tracking-widest" data-i18n="home.role">{role}</span>
    <span class="text-accent group-hover:translate-x-1 transition-transform flex items-center gap-1 text-sm font-medium">
      <span data-i18n="project.viewCase">View Case</span>
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
    </span>
  </div>
</a>
