---
interface Props {
  title: string;
  description: string;
  role: string;
  tags: string[];
  href: string;
  metrics?: string;
}

const { title, description, role, tags, href, metrics } = Astro.props;
---

<a href={href} class="group card flex flex-col h-full">
  <div class="flex-grow">
    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.slice(0, 2).map((tag) => (
        <span class="badge">{tag}</span>
      ))}
    </div>
    
    <!-- Title -->
    <h3 class="text-xl font-bold text-text group-hover:text-accent transition-colors mb-2">
      {title}
    </h3>
    
    <!-- Description -->
    <p class="text-text-muted text-sm leading-relaxed mb-4">{description}</p>
    
    <!-- Metrics if available -->
    {metrics && (
      <p class="text-accent font-semibold text-sm">{metrics}</p>
    )}
  </div>
  
  <!-- Footer -->
  <div class="flex items-center justify-between pt-4 mt-4 border-t border-border">
    <span class="text-xs font-medium text-text-muted uppercase tracking-wide">{role}</span>
    <span class="text-accent group-hover:translate-x-1 transition-transform flex items-center gap-1 text-sm font-medium">
      View Case
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
    </span>
  </div>
</a>
